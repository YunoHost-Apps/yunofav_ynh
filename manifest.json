{
    "name": "Yunofav",
    "id": "yunofav",
    "packaging_format": 1,
    "description": {
        "en": "A page of favorite links",
        "fr": "Une page de liens favoris"
    },
    "version": "1.0~ynh1",
    "url": "https://github.com/YunoHost-Apps/yunofav_ynh/",
    "license": "MIT",
    "developer": {
        "name": "chtixof"
    },
    "maintainer": {
        "name": "YunoHost Contributors",
        "email": "apps@yunohost.org"
    },
    "requirements": {
        "yunohost": ">= 3.8.1"
    },
    "multi_instance": true,
    "services": [
        "nginx"
    ],
    "arguments": {
        "install" : [
            {
                "name": "domain",
                "type": "domain",
                "ask": {
                    "en": "Choose a domain for Yunofav",
                    "fr": "Choisissez un domaine pour Yunofav"
                },
                "example": "domain.org"
            },
            {
                "name": "path",
                "type": "path",
                "ask": {
                    "en": "Choose a path for Yunofav",
                    "fr": "Choisissez un chemin pour Yunofav"
                },
                "example": "/yunofav",
                "default": "/yunofav"
            },
            {
                "name": "is_public",
                "type": "boolean",
                "ask": {
                    "en": "Is it a public application?",
                    "fr": "Est-ce une application publique ?"
                },
                "help": {
                    "en": "If enabled, Yunofav will be accessible by people who do not have an account. This can be changed later via the webadmin.",
                    "fr": "Si cette case est cochée, Yunofav sera accessible aux personnes n’ayant pas de compte. Vous pourrez changer ceci plus tard via la webadmin."
                },
                "default": true
            }
        ]
    }
}
